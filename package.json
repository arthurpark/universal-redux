{
  "name": "universal-redux-boilerplate",
  "version": "0.0.1",
  "description": "Universal redux boilerplate with hot loading, react-router",
  "main": "index.js",
  "scripts": {
    "start": "node index",
    "build": "webpack --verbose --progress --colors --display-error-details --config webpack.config.js",
    "dev": "NODE_ENV=development node index",
    "dev:watch": "NODE_PATH=./src NODE_ENV=development node ./server/babel.server",
    "watch-client": "NODE_PATH=./src node server/dev.js",
    "test": "mocha --compilers js:babel-core/register --recursive",
    "test:watch": "npm run test -- --watch"
  },
  "keywords": [
    "react",
    "redux",
    "universal",
    "hot reloading",
    "react-router",
    "starter",
    "babel"
  ],
  "author": "Arthur Park",
  "license": "MIT",
  "dependencies": {
    "babel-core": "^6.2.1",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.1.18",
    "babel-preset-stage-0": "^6.1.18",
    "babel-register": "^6.3.13",
    "body-parser": "^1.14.1",
    "express": "^4.13.3",
    "history": "^1.13.1",
    "i18n-abide": "0.0.23",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "react-redux": "^4.0.0",
    "react-router": "^1.0.0",
    "redux": "^3.0.4"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.6",
    "babel-loader": "^6.2.0",
    "chai": "^3.4.1",
    "eslint": "^1.10.2",
    "eslint-plugin-react": "^3.11.2",
    "istanbul": "^0.4.1",
    "mocha": "^2.3.4",
    "react-hot-loader": "^1.3.0",
    "webpack": "^1.12.9",
    "webpack-dev-server": "^1.14.0"
  }
}
