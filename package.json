{
  "name": "universal-redux",
  "version": "0.0.1",
  "description": "Universal redux boilerplate with hot loading, react-router",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node index",
    "build": "webpack --verbose --progress --colors --display-error-details --config webpack.config.js",
    "dev": "NODE_ENV=development node index",
    "dev:watch": "NODE_PATH=./src NODE_ENV=development node ./server/babel.server",
    "watch-client": "NODE_PATH=./src node server/dev.js",
    "test": "mocha --compilers js:babel-core/register --recursive",
    "test:watch": "npm run test -- --watch"
  },
  "keywords": [
    "react",
    "redux",
    "universal",
    "hot reloading",
    "react-router",
    "starter",
    "babel",
    "i18n",
    "css modules"
  ],
  "author": "Arthur Park",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^6.1.2",
    "babel-core": "^6.2.1",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.1.18",
    "babel-preset-stage-0": "^6.1.18",
    "babel-register": "^6.3.13",
    "bluebird": "^3.1.1",
    "body-parser": "^1.14.1",
    "classnames": "^2.2.1",
    "css-modules-require-hook": "^2.1.0",
    "express": "^4.13.3",
    "history": "~1.13.1",
    "i18n-abide": "0.0.23",
    "normalize.css": "^3.0.3",
    "react": "^0.14.3",
    "react-addons-shallow-compare": "^0.14.3",
    "react-container": "^0.3.1",
    "react-dom": "^0.14.3",
    "react-redux": "^4.0.1",
    "react-router": "^1.0.2",
    "redux": "^3.0.5"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.6",
    "babel-loader": "^6.2.0",
    "babel-plugin-react-transform": "^2.0.0-beta1",
    "chai": "^3.4.1",
    "css-loader": "^0.23.0",
    "eslint": "^1.10.2",
    "eslint-plugin-react": "^3.11.2",
    "extract-text-webpack-plugin": "^0.9.1",
    "istanbul": "^0.4.1",
    "json-loader": "^0.5.4",
    "mocha": "^2.3.4",
    "postcss": "^5.0.13",
    "postcss-loader": "^0.8.0",
    "postcss-modules-extract-imports": "^1.0.0",
    "postcss-modules-local-by-default": "^1.0.0",
    "postcss-modules-scope": "^1.0.0",
    "postcss-modules-values": "^1.1.1",
    "precss": "^1.3.0",
    "react-transform-catch-errors": "^1.0.0",
    "react-transform-hmr": "^1.0.1",
    "redbox-react": "^1.2.0",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.9",
    "webpack-dev-middleware": "^1.4.0",
    "webpack-hot-middleware": "^2.6.0"
  }
}
